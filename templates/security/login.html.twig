{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section>
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-auto lg:py-0">
            <div class="w-full bg-white rounded-lg md:mt-0 sm:max-w-md xl:p-0 border">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">

                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
                        Connexion
                    </h1>

                    <form method="post" class="space-y-4 md:space-y-6">

                        <div>
                            <label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" list="email-suggestions" required autofocus
                                   class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5"
                                   placeholder="votreadresse@exemple.com"
                            >

                            <datalist id="email-suggestions">
                            </datalist>
                        </div>

                        <div class="relative">
                            <label for="password" class="block mb-2 text-sm font-medium text-gray-900">Mot de passe</label>
                            <input type="password" name="password" id="password" autocomplete="current-password" required placeholder="Votre mot de passe"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5 pr-9">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                 class="w-5 h-5 absolute right-3 bottom-2.5 text-gray-400 hover:text-gray-500 cursor-pointer select-none">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-start">
                                <div class="flex items-center h-5">
                                    <input type="checkbox" name="_remember_me" id="remember_me" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-2 focus:ring-orange-500">
                                </div>
                                <div class="ml-2 text-sm">
                                    <label for="remember_me" class="font-light text-gray-500">Se souvenir de moi</label>
                                </div>
                            </div>
                            <a href="#" class="text-sm font-medium text-gray-500 hover:underline">Mot de passe oubli√©</a>
                        </div>


                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="w-full text-white bg-orange-500 hover:bg-orange-600 focus:bg-orange-600 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                            Se connecter
                        </button>

                        <p class="text-sm font-light text-gray-500">
                            Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="font-medium text-orange-500 hover:underline">Inscrivez vous ici</a>
                        </p>

                    </form>

                </div>
            </div>
        </div>
    </section>
{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('inscription') }}
 {% endblock %}