{% set article_link = path('article_display', {'slug': article.slug}) %}
<article class="p-6 bg-white rounded-lg border">


    {% if article.featuredImage %}
    <a href="{{ article_link }} ">
        <img src="/uploads/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}"
             class="rounded-xl max-h-40 h-100 w-full object-cover object-center mb-4"
             loading="lazy"
        >
    </a>
    {% endif %}

    <div class="flex justify-between items-center mb-5 text-gray-500">
        <span class="bg-orange-500 text-white text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded">
            <svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path><path d="M15 7h1a2 2 0 012 2v5.5a1.5 1.5 0 01-3 0V7z"></path></svg>
            Category
        </span>
        <span class="text-sm">{{ article.createdAt|format_datetime('long', 'none', locale='fr') }}</span>
    </div>

    <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 hover:underline">
        <a href="{{ article_link }}">{{ article.title }}</a>
    </h2>

    <p class="mb-5 font-light text-gray-500">
        {{ article.abstract ?: article.content|striptags|slice(0, 200) ~ '...' }}
    </p>

    <div class="flex justify-between items-center">
        <div class="flex items-center space-x-2">
            <img class="w-7 h-7 rounded-full"
                 src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
                 alt="Bonnie Green avatar"/>
            <span class="font-medium">
                Jack Sparrow
            </span>
        </div>

        <a href="{{ article_link }}" class="inline-flex items-center font-medium text-orange-500 hover:underline">
            Read more
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
    </div>

</article>
